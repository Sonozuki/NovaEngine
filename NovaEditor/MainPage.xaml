<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:NovaEditor.Controls"
             x:Class="NovaEditor.MainPage"
             
             Padding="4"
             BackgroundColor="{StaticResource BackgroundColourMedium}">

    <ContentPage.MenuBarItems>

        <MenuBarItem Text="File">
            <MenuFlyoutItem Text="New" />
            <MenuFlyoutSeparator />
            <MenuFlyoutItem Text="Exit" />
        </MenuBarItem>

        <MenuBarItem x:Name="ViewMenuBarItem"
                     Text="View" />

    </ContentPage.MenuBarItems>

    <controls:PanelTabGroupGroup x:Name="RootPanelTabGroupGroup" />

</ContentPage>
