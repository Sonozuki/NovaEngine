<Button x:Class="NovaEditor.Controls.FontIconButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:NovaEditor.Controls"
        Template="{StaticResource IconButtonTemplate}"
        Style="{StaticResource IconButtonStyle}">

    <Label Content="{Binding Glyph, RelativeSource={RelativeSource AncestorType={x:Type controls:FontIconButton}}}"
           Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type controls:FontIconButton}}}"
           FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType={x:Type controls:FontIconButton}}}" />

</Button>
