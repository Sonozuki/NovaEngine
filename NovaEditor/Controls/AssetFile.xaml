<UserControl x:Class="NovaEditor.Controls.AssetFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:icons="clr-namespace:NovaEditor.Controls.Icons"
             xmlns:controls="clr-namespace:NovaEditor.Controls">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding IconHeight, RelativeSource={RelativeSource AncestorType={x:Type controls:AssetsPanel}}}" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <icons:FileIcon />
        <Label Grid.Row="1"
               Content="{Binding FileName, RelativeSource={RelativeSource AncestorType={x:Type controls:AssetFile}}}" />
        
    </Grid>

</UserControl>
