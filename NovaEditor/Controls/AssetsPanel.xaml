<controls:EditorPanelBase x:Class="NovaEditor.Controls.AssetsPanel"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:controls="clr-namespace:NovaEditor.Controls"
                          Title="Assets">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <UniformGrid x:Name="RootUniformGrid"
                     Columns="10" />
        
        <Slider x:Name="ScaleSlider"
                Grid.Row="1"
                Minimum=".5"
                Maximum="2"
                Value="{Binding Scale}" />
    </Grid>

</controls:EditorPanelBase>
