<UserControl x:Class="NovaEditor.Controls.Icons.FileIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:panels="clr-namespace:NovaEditor.Controls.Panels">

    <Canvas>
        <Canvas.RenderTransform>
            <ScaleTransform ScaleX="{Binding IconScale, RelativeSource={RelativeSource AncestorType={x:Type panels:AssetsPanel}}}"
                            ScaleY="{Binding IconScale, RelativeSource={RelativeSource AncestorType={x:Type panels:AssetsPanel}}}" />
        </Canvas.RenderTransform>

        <Path Fill="#FFB3B3B3" Data="M 30 0 V 20 H 50 Z" />
        <Path Fill="#FFCCCCCC" Data="M 30 0 C 28.353354 -0.50666039 0 0 0 0 V 70 H 50 V 20 H 30 Z" />
    </Canvas>

</UserControl>
