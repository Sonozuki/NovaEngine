<UserControl x:Class="NovaEditor.Controls.Icons.FolderIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:panels="clr-namespace:NovaEditor.Controls.Panels">

    <Canvas>
        <Canvas.RenderTransform>
            <ScaleTransform ScaleX="{Binding IconScale, RelativeSource={RelativeSource AncestorType={x:Type panels:AssetsPanel}}}"
                            ScaleY="{Binding IconScale, RelativeSource={RelativeSource AncestorType={x:Type panels:AssetsPanel}}}" />
        </Canvas.RenderTransform>

        <Path Fill="#FFFFDD55" Data="M 0 0 V 70 H 100 V 0 H 50 L 45 5 H 5 Z" />
    </Canvas>

</UserControl>
