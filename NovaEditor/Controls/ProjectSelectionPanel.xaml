<controls:EditorPanelBase x:Class="NovaEditor.Controls.ProjectSelectionPanel"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:controls="clr-namespace:NovaEditor.Controls"
                          xmlns:viewModels="clr-namespace:NovaEditor.ViewModels">

    <UserControl.DataContext>
        <viewModels:ProjectSelectionViewModel />
    </UserControl.DataContext>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ListBox ItemsSource="{Binding RecentProjects}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding DataContext.LoadProjectCommand, RelativeSource={RelativeSource AncestorType={x:Type controls:ProjectSelectionPanel}}}"
                            CommandParameter="{Binding}">

                        <TextBlock Text="{Binding}" />

                    </Button>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Button Command="{Binding OpenProjectCommand}">Open Project</Button>
            <Button Command="{Binding CreateProjectCommand}">Create Project</Button>
        </StackPanel>

    </Grid>

</controls:EditorPanelBase>
